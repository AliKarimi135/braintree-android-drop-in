<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/card_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/bt_card_highlighted"/>
    <!-- TODO not this drawable -->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/add_card_number_layout"
        android:layout_toRightOf="@id/card_icon"
        android:layout_centerVertical="@id/card_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/add_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:inputType="number"
            android:hint="@string/bt_form_hint_card_number"/>

    </android.support.design.widget.TextInputLayout>

    <GridLayout
        android:id="@+id/accepted_cards"
        android:layout_below="@id/add_card_number_layout"
        android:layout_alignLeft="@id/add_card_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="true"
        android:rowOrderPreserved="true" />

    <com.braintreepayments.api.dropin.view.AnimatedButtonView
        android:id="@+id/animated_button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accepted_cards"
        android:layout_marginTop="40dp"
        bt:bt_buttonText="@string/bt_next"/>

</merge>