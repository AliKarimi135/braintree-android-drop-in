<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bt_payment_method_list_item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="20dp"
    android:paddingLeft="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/bt_payment_method_icon"
        tools:ignore="ContentDescription"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="58dp"
        android:layout_height="37dp" />

    <TextView
        style="@style/bt_base_textview_bold"
        android:id="@+id/bt_payment_method_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/bt_payment_method_icon"
        android:layout_toEndOf="@id/bt_payment_method_icon"
        android:layout_marginLeft="@dimen/bt_payment_method_item_padding"
        android:layout_marginStart="@dimen/bt_payment_method_item_padding"
        android:textSize="18sp"
        android:textColor="@color/bt_black" />

</RelativeLayout>